{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "lambda",
    "esModuleInterop": true,
    
    // Strictness flags from dev repo
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["lambda/**/*.ts"]
}
